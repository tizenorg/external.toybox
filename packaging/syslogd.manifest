<manifest>
	<define>
		<domain name="syslogd"/>
		<request>
			<smack request="system::sys_logging" type="wx"/>
			<smack request="systemd" type="w"/>
		</request>
		<permit>
			<smack permit="_" type="w"/>
		</permit>
	</define>
	<request>
		<domain name="_"/>
	</request>
	<assign>
		<filesystem path="/sbin/syslogd" exec_label="syslogd" />
	</assign>
</manifest>
